{
  "name": "zenith",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "preview": "turbo run preview --filter=@zenith/vue-app --filter=@zenith/react-app --filter=@zenith/svelte-app --filter=@zenith/ui",
    "typecheck": "turbo run typecheck"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue,svelte}": "prettier --write"
  },
  "devDependencies": {
    "@zenith/eslint-config": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.7",
    "wait-on": "^9.0.1"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
